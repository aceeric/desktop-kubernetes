 --priv-key=/home/eace/k8sbyhand/newroot/kickstart/id_ed25519\
 --controller-ip=192.168.0.81\
 --controller-hostname=doc\
 --kube-controller-manager-binary=/home/eace/k8sbyhand/newroot/binaries/kube-controller-manager\
 --kubernetes-cert=/home/eace/k8sbyhand/newroot/tls/kubernetes.pem\
 --kubernetes-key=/home/eace/k8sbyhand/newroot/tls/kubernetes-key.pem\
 --ca-cert=/home/eace/k8sbyhand/newroot/tls/ca.pem\
 --ca-key=/home/eace/k8sbyhand/newroot/tls/ca-key.pem

