#!/usr/bin/env bash

# generates id_ed25519 and id_ed25519.pub in the kickstart directory. These get included in the kickstart
# ISO that is generated by the 'gen-kickstart-iso' script.

set -e

kickstart_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")/../kickstart" && pwd)"
ssh-keygen -t ed25519 -N '' -f "$kickstart_dir/id_ed25519" <<<y
