

# on the desktop

$ ENCRYPTION_KEY=$(head -c 32 /dev/urandom | base64)

$ cat <<EOF >| ./encryption-config.yaml
kind: EncryptionConfig
apiVersion: v1
resources:
- resources:
  - secrets
  providers:
  - aescbc:
      keys:
      - name: key1
        secret: $ENCRYPTION_KEY
  - identity: {}
EOF

scp -i $PROJROOT/servers/id_rsa $PROJROOT/encryption-keys/encryption-config.yaml root@192.168.0.46:/root/kubernetes
